<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/reflectionsBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/headingTextView"
                    android:layout_width="fill_parent"
                    android:background="@color/headingBackground"
                    android:textColor="@color/whiteText"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:padding="10dp"
                    android:text="Reflection Heading" />

            </LinearLayout>
            <TextView
                android:id="@+id/sourceTextView"
                android:text="Source"
                android:textSize="20dp"
                android:padding="10dp"
                android:background="@color/sourceBackground"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/reflectionSourceTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/sourcebookBackground"
                    android:textColor="@color/whiteText"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="Reflection Source" />

            </LinearLayout>
            <TextView
                android:id="@+id/reflectionTextView"
                android:text="Reflection"
                android:textSize="18dp"
                android:padding="10dp"
                android:background="@color/generalText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/copyrightTextView"
                android:padding="5dp"
                android:background="@color/footerText"
                android:text="Copyright:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
